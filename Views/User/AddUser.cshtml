@model DAL.Models.User;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style1.css">
    <title>Add New User</title>
</head>

<body>
    <div class="d-flex">
        <div class="w-100">
            <div class="d-flex justify-content-between">
                <div class="ms-4">
                    <p class="fs-2" style="color: rgb(0, 102, 187);">Add New User</p>
                </div>
                <div class="me-4 mt-2">
   
                    <a asp-controller="User" asp-action="UserList" class="border p-2"
                        style="background-color: rgb(0, 102, 187); text-decoration: none; color: #fff;">
                        < Back</a>
                </div>
            </div>

            <form method="post" asp-controller="User" asp-action="AddUser" class="bg-white border ms-4 me-4">
                <div class="row ps-3 pe-3 pt-3">
                    <div class="col-lg-6 pb-3">
                        <div class="form-floating">
                            <input class="form-control" type="text" placeholder="First Name" asp-for="Firstname">
                            <label for="floatingInput">First Name</label>
                            <span asp-validation-for="Firstname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 pb-3">
                        <div class="form-floating">
                            <input class="form-control" type="text" placeholder="Last Name" asp-for="Lastname">
                            <label for="floatingInput">Last Name</label>
                            <span asp-validation-for="Lastname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 pb-3">
                        <div class="form-floating">
                            <input class="form-control" type="text" placeholder="User Name" asp-for="Username">
                            <label for="floatingInput">User Name</label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 pb-3">
                        <div class="form-floating">
                        <select class="form-select" asp-for="Userrole">
                            <option selected disabled>Select Role</option>
                            <option value="1">Admin</option>
                            <option value="2">Cheaf</option>
                        </select>
                        <label for="floatingSelect">Role</label>
                        </div>
                    </div>
                    <div class="col-lg-6 pb-3">
                        <div class="form-floating">
                        <input class="form-control" type="text" placeholder="Email" asp-for="Email">
                         <label for="floatingInput">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 pb-3">
                        <div class="form-floating">
                        <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                        <label for="floatingInput">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row ps-3 pe-3 pb-3 pt-3">
                    <div class="col-12">
                        <p style="height: 100px;"
                            class="form-control pt-3 d-flex flex-column align-items-center justify-content-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" fill="currentColor"
                                class="bi bi-cloud-arrow-up" viewBox="0 0 16 16">
                                <path fill-rule="evenodd"
                                    d="M7.646 5.146a.5.5 0 0 1 .708 0l2 2a.5.5 0 0 1-.708.708L8.5 6.707V10.5a.5.5 0 0 1-1 0V6.707L6.354 7.854a.5.5 0 1 1-.708-.708z" />
                                <path
                                    d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383m.653.757c-.757.653-1.153 1.44-1.153 2.056v.448l-.445.049C2.064 6.805 1 7.952 1 9.318 1 10.785 2.23 12 3.781 12h8.906C13.98 12 15 10.988 15 9.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 4.825 10.328 3 8 3a4.53 4.53 0 0 0-2.941 1.1z" />
                            </svg>Upload file
                            <input type="file" style="opacity: 0%;" name="" id="">
                        </p>
                    </div>
                </div>
                <div class="row ps-3 pe-3 pt-3">
                    <div class="col-lg-4 pb-3">
                        <div class="form-floating">
                            <select class="form-select" id="countrySelect" asp-for="Country">
                                <option selected disabled>Select country</option>
                            </select>
                            <label for="countrySelect">Country</label>
                        </div>
                    </div>
                    <div class="col-lg-4 pb-3">
                        <div class="form-floating">
                            <select class="form-select" id="stateSelect" asp-for="State" disabled>
                                <option selected disabled>Select state</option>
                            </select>
                            <label for="stateSelect">State</label>
                        </div>
                    </div>
                    <div class="col-lg-4 pb-3">
                        <div class="form-floating">
                            <select class="form-select" id="citySelect" asp-for="City" disabled>
                                <option selected disabled>Select city</option>
                            </select>
                            <label for="citySelect">City</label>
                        </div>
                    </div>
                    <div class="col-lg-4 pb-3">
                         <div class="form-floating">
                        <input class="form-control" type="number" placeholder="Zipcode" asp-for="Zipcode">
                        <label for="floatingInput">Zip Code</label>
                        <span asp-validation-for="Zipcode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4 pb-3">
                         <div class="form-floating">
                        <input class="form-control" type="text" placeholder="Address" asp-for="Address">
                        <label for="floatingInput">Address</label>
                        <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-4 pb-3">
                         <div class="form-floating">
                        <input type="number" class="form-control" placeholder="Phone" asp-for="Phonenumber">
                        <label for="floatingInput">Phone Number</label>
                        <span asp-validation-for="Phonenumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="ps-3 pt-2 pb-3">
                    <button class="btn btn-outline-primary" type="submit">Create user</button>
                    <button class="btn btn-primary" onclick="resetForm()" type="button">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <script src="js/bootstrap.bundle.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    <script>
        $(document).ready(function () {
            $.getJSON('/Profile/GetCountries', function (data) {
                $.each(data, function (index, country) {
                    $('#countrySelect').append(`<option value="${country.countryid}">${country.countryname}</option>`);
                });
            });

            $('#countrySelect').change(function () {
                var countryId = $(this).val();
                $('#stateSelect').empty().append('<option selected disabled>Select state</option>').prop('disabled', false);
                $('#citySelect').empty().append('<option selected disabled>Select city</option>').prop('disabled', true);

                $.getJSON(`/Profile/GetStates?countryId=${countryId}`, function (data) {
                    $.each(data, function (index, state) {
                        $('#stateSelect').append(`<option value="${state.stateid}">${state.statename}</option>`);
                    });
                });
            });

            $('#stateSelect').change(function () {
                var stateId = $(this).val();
                $('#citySelect').empty().append('<option selected disabled>Select city</option>').prop('disabled', false);

                $.getJSON(`/Profile/GetCities?stateId=${stateId}`, function (data) {
                    $.each(data, function (index, city) {
                        $('#citySelect').append(`<option value="${city.cityid}">${city.cityname}</option>`);
                    });
                });
            });
        });

        function resetForm() {
            $('form')[0].reset();
        }
    </script>
</body>

</html>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>