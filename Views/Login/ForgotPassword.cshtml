@{
    Layout = "";
}

@model Pizzashop.DAL.ViewModels.Loginviewmodel;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

    <link rel="stylesheet" href="~/css/login.css">
    <title>Login</title>
</head>

<body>
    <div class="row  p-0 vh-100 vw-100 g-0" style=" height: 100%; width: 100%;">

        <div class="col-lg-6 col-md-12 d-lg-block d-none">
            <img style="height:100%; width: 100%;" class="img-fluid" src="~/images/dominos_background.jpg" alt="">
        </div>

        <form method="post" asp-controller="Login" asp-action="ForgotPassword"
            class="content col-lg-6 d-flex align-items-center  justify-content-center col-md-12 ps-xl-5 pt-xl-5">
            <div class="bg-image d-block d-lg-none position-absolute w-100 h-100"
                style="background-image: url('~/images/dominos_background.jpg'); background-size: cover; background-position: center; z-index: -1; opacity: 80%;">
            </div>
            <div class="container ms-xl-0  ms-lg-0 ms-md-5 ms-sm-3">
                <div class="row mb-5 me-md-5 me-xl-5">
                    <div class="pizza d-flex align-items-center justify-content-center">
                        <img class="img-fluid" style="height: 60px;" src="~/images/logos/pizzashop_logo.png" alt="">
                        <h1 class="font1 p-0">PIZZASHOP</h1>
                    </div>
                </div>
                <div class="row font1 ms-5 ">
                    <h1 class="fw-bold p-0">Forgot Password</h1>
                    <h6 class="col-10 p-0">Enter your email an we'll send you a link to reset your password </h6>
                </div>
                <div class="row ms-5 ">
                    <form class="loginForm">
                        <div class="mb-4 d-flex justify-content-end col-10 position-relative p-0">
                            <input asp-for="Email" class="form-control" id="email" value="@ViewData["emailview"]"
                                placeholder="Email">
                            <div class="image"><img src="images/icons/customer.svg" alt=""></div>
                            <small id="emailError" class="emailError text-danger position-absolute"
                                style="bottom: -20px; left: 0;"></small>
                            <span asp-validation-for="Email" style="position:absolute; bottom: -20px; left: 2px;"
                                class="text-danger"></span>
                        </div>
                        <button type="submit"
                            class="btn btn-primary btn-sm col-10 align-items-center justify-content-center mb-2">Login</button>
                    </form>
                    <a class="d-flex align-items-center col-10 justify-content-center mb-2"
                        style="color: blue; text-decoration: none;" asp-controller="Login" asp-action="Login">Back to
                        Login</a>
                    <div class="d-flex" style="color: green; margin-left: 170px;"> @ViewBag.Message </div>
                </div>
            </div>
        </form>

    </div>
</body>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

</html>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

